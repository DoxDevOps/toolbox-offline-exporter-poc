[Unit]
Description = Toolbox Service
After       = network.target

[Service]
Group=www-data
WorkingDirectory=/var/www/toolbox-offline-exporter
Environment="PATH=/var/www/toolbox-offline-exporter/flask/bin"
ExecStart=/usr/bin/python  /var/www/toolbox-offline-exporter/start.py


# In case if it gets stopped, restart it immediately
Restart = always

Type = simple


[Install]
# multi-user.target corresponds to run level 3
# roughtly meaning wanted by system start
WantedBy    = multi-user.target

